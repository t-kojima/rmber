<script type="text/javascript">
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
<style>
    .nav.pull-right.nav-pills {
        margin: -20px 0
    }

    .nav li a {
        padding: 6px 15px
    }

    @media (min-width: 768px) {
        .nav.pull-right.nav-pills.nav-sm {
            display: none;
        }
        .contents-header {
            float: left;
            margin: -36px 0 0 0
        }
    }

    @media (max-width: 767px) {
        .nav.pull-right.nav-pills.nav-lg {
            display: none;
        }
        .contents-header {
            display: none;
        }
    }
</style>

<div class="container">
    <div class="contents-header">
        <h2>Devices</h2>
        <p>
            管理機器の一覧
        </p>
    </div>
    <ul class="nav pull-right nav-pills nav-lg">
        <li>
            <%= link_to new_device_path, class: "btn btn-primary" do %>
                <%= fa_icon "plus fw" %>New Device
                    <% end %>
        </li>
        <li>
            <%= form_tag "/devices/search", method: "get" do %>
                <div class="input-group">
                    <%= text_field_tag :search, "", class: "form-control", placeholder: "search ..." %>
                        <span class="input-group-btn">
                            <%= button_tag type: "submit", class: "btn btn-primary" do %>
                                <%= fa_icon "search fw" %>Search
                                    <% end %>
                        </span>
                </div>
                <% end %>
        </li>
    </ul>
    <ul class="nav pull-right nav-pills nav-sm">
        <li>
            <%= link_to new_device_path, class: "btn btn-primary btn-sm" do %>
                <%= fa_icon "plus fw" %>
                    <% end %>
        </li>
        <li>
            <%= form_tag "/devices/search", method: "get" do %>
                <div class="input-group">
                    <%= text_field_tag :search, "", class: "form-control input-sm", placeholder: "search ..." %>
                        <span class="input-group-btn">
                            <%= button_tag type: "submit", class: "btn btn-primary btn-sm" do %>
                                <%= fa_icon "search fw" %>
                                    <% end %>
                        </span>
                </div>
                <% end %>
        </li>
    </ul>

    <hr>

    <p id="notice">
        <%= notice %>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Host</th>
                <th>Os</th>
                <th>Maker</th>
                <th>Model</th>
                <th>Type</th>
                <th>Purpose</th>
                <th>Disabled</th>
                <th>Deleted</th>
                <th colspan="3">icons</th>
            </tr>
        </thead>

        <tbody>
            <% @devices.each do |device| %>
                <tr>
                    <td>
                        <%= device.host %>
                    </td>
                    <td>
                        <%= device.os %>
                    </td>
                    <td>
                        <%= device.maker %>
                    </td>
                    <td>
                        <%= device.model %>
                    </td>
                    <td>
                        <%= device._type %>
                    </td>
                    <td>
                        <%= device.purpose %>
                    </td>
                    <td>
                        <%= device.disabled %>
                    </td>
                    <td>
                        <%= device.deleted %>
                    </td>
                    <td>
                        <%= link_to device, class: "btn btn-sm btn-primary",
                            title: "show", 'data-toggle' => 'tooltip', 'data-placement' => 'top' do %>
                            <%= fa_icon "info fw" %>
                                <% end %>
                    </td>
                    <td>
                        <%= link_to  edit_device_path(device), class: "btn btn-sm btn-primary", 
                            title: "edit", 'data-toggle' => 'tooltip', 'data-placement' => 'top' do %>
                            <%= fa_icon "pencil-square-o fw" %>
                                <% end %>
                    </td>
                    <td>
                        <%= link_to device, method: :delete, data: { confirm: '削除します。宜しいですか？'}, class: "btn btn-sm btn-danger",
                            title: "delete", 'data-toggle' => 'tooltip', 'data-placement' => 'top' do %>
                            <%= fa_icon "trash fw" %>
                                <% end %>
                    </td>
                </tr>
                <% end %>
        </tbody>
    </table>
</div>