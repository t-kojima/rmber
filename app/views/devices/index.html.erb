<script type="text/javascript">
    $(document).ready(function() {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
<style>
    .nav li a {
        padding: 6px 15px
    }
    
    .content-header {
        margin-top: -20px
    }
    
    .content-header h2 {
        margin: 5px
    }
    
    @media (max-width: 767px) {
        .nav li b {
            display: none
        }
    }
</style>

<div class="container">
    <section class="content-header">
        <div class="row">
            <div class="col-md-3">
                <h2>Devices</h2>
            </div>
            <div class="col-md-9">
                <ul class="nav pull-right nav-pills">
                    <li>
                        <%= link_to new_device_path, class: "btn btn-primary" do %>
                            <%= fa_icon "plus fw" %> <b>New</b>
                                <% end %>
                    </li>
                    <li>
                        <%= form_tag "/devices/search", method: "get" do %>
                            <div class="input-group">
                                <%= text_field_tag :search, "", class: "form-control", placeholder: "search ..." %>
                                    <span class="input-group-btn">
                                        <%= button_tag type: "submit", class: "btn btn-primary" do %>
                                        <%= fa_icon "search fw" %> <b>Search</b>
                                        <% end %>
                                    </span>
                            </div>
                            <% end %>
                    </li>
                </ul>
            </div>
        </div>
    </section>

    <hr>

    <section>
        <p id="notice">
            <%= notice %>
        </p>
    </section>

    <section>
        <table class="table">
            <thead>
                <tr>
                    <th>Host</th>
                    <th>Os</th>
                    <th>Maker</th>
                    <th>Model</th>
                    <th>Type</th>
                    <th>Purpose</th>
                    <th>Enabled</th>
                    <th>Deleted</th>
                    <th colspan="3">icons</th>
                </tr>
            </thead>

            <tbody>
                <% @devices.each do |device| %>
                    <tr>
                        <td>
                            <%= device.host %>
                        </td>
                        <td>
                            <%= device.os %>
                        </td>
                        <td>
                            <%= device.maker %>
                        </td>
                        <td>
                            <%= device.model %>
                        </td>
                        <td>
                            <%= device._type %>
                        </td>
                        <td>
                            <%= device.purpose %>
                        </td>
                        <td>
                            <%= device.enabled %>
                        </td>
                        <td>
                            <%= device.deleted %>
                        </td>
                        <td>
                            <%= link_to device, class: "btn btn-sm btn-primary",
                                        title: "show", 'data-toggle' => 'tooltip', 'data-placement' => 'top' do %>
                                <%= fa_icon "info fw" %>
                                    <% end %>
                        </td>
                        <td>
                            <%= link_to  edit_device_path(device), class: "btn btn-sm btn-primary", 
                                        title: "edit", 'data-toggle' => 'tooltip', 'data-placement' => 'top' do %>
                                <%= fa_icon "pencil-square-o fw" %>
                                    <% end %>
                        </td>
                        <td>
                            <%= link_to device, method: :delete, data: { confirm: '削除します。宜しいですか？'}, class: "btn btn-sm btn-danger",
                                        title: "delete", 'data-toggle' => 'tooltip', 'data-placement' => 'top' do %>
                                <%= fa_icon "trash fw" %>
                                    <% end %>
                        </td>
                    </tr>
                    <% end %>
            </tbody>
        </table>
    </section>
</div>