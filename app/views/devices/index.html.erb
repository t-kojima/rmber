<script type="text/javascript">
    $(document).ready(function() {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>

<div class="container">
    <div>
        <h2>Devices</h2>
        <p>
            管理機器の一覧
        </p>
    </div>

    <hr>

    <div>
        <%= link_to new_device_path, class: "btn btn-primary" do %>
            <%= fa_icon "plus fw" %>New Device
                <% end %>
    </div>

    <hr>

    <p id="notice">
        <%= notice %>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Host</th>
                <th>Os</th>
                <th>Maker</th>
                <th>Model</th>
                <th>Type</th>
                <th>Purpose</th>
                <th>Disabled</th>
                <th>Deleted</th>
                <th colspan="3">icons</th>
            </tr>
        </thead>

        <tbody>
            <% @devices.each do |device| %>
                <tr>
                    <td>
                        <%= device.host %>
                    </td>
                    <td>
                        <%= device.os %>
                    </td>
                    <td>
                        <%= device.maker %>
                    </td>
                    <td>
                        <%= device.model %>
                    </td>
                    <td>
                        <%= device._type %>
                    </td>
                    <td>
                        <%= device.purpose %>
                    </td>
                    <td>
                        <%= device.disabled %>
                    </td>
                    <td>
                        <%= device.deleted %>
                    </td>
                    <td>
                        <%= link_to device, class: "btn btn-sm btn-primary",
                            title: "show", 'data-toggle' => 'tooltip', 'data-placement' => 'top' do %>
                            <%= fa_icon "info fw" %>
                                <% end %>
                    </td>
                    <td>
                        <%= link_to  edit_device_path(device), class: "btn btn-sm btn-primary", 
                            title: "edit", 'data-toggle' => 'tooltip', 'data-placement' => 'top' do %>
                            <%= fa_icon "pencil-square-o fw" %>
                                <% end %>
                    </td>
                    <td>
                        <%= link_to device, method: :delete, data: { confirm: '削除します。宜しいですか？'}, class: "btn btn-sm btn-danger",
                            title: "delete", 'data-toggle' => 'tooltip', 'data-placement' => 'top' do %>
                            <%= fa_icon "trash fw" %>
                                <% end %>
                    </td>
                </tr>
                <% end %>
        </tbody>
    </table>
</div>