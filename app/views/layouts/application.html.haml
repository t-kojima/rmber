    %header
      .container
        .row
          %a{:href => "/devices"}
            .col-xs-6.col-sm-6.col-md-6
              = fa_icon "desktop fw"
              Devices
          %a{:href => "/network_interfaces"}
            .col-xs-6.col-sm-6.col-md-6
              = fa_icon "wifi fw"
              Network
    = yield
